@{
    ViewData["Title"] = "Movie List";
}

@model List<MvcMovie.Models.Movie>

<h1>Movies</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>@movie.Id</tr>
            <tr>@movie.Title</tr>
            <tr>@movie.Genre</tr>
            <tr>@movie.Price</tr>
        }
    </tbody>
</table>
