@using ProductManagementSystem.Models.VM.Order
@model OrderViewModel

@{
    ViewData["Title"] = "Edit Order";
}

<h1>Edit Order</h1>


<form asp-action="Edit" method="post">
       <div class="mb-3">
        <label class="form-control">Select Products</label>
        <select name="ProductIds" multiple class="form-control">
            @foreach (var product in ViewBag.Products)
            {
                <option value="@product.Id">
                    @product.Name - @product.Price
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <button asp-action="Index" type="submit" class="btn btn-secondary">Cancel</button>
</form>